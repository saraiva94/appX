{
  "name": "appx",
  "version": "1.0.0",
  "main": "main.js",
  "productName": "Privacy Meeting Assistant",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win nsis",
    "build:mac": "electron-builder --mac dmg",
    "build:linux": "electron-builder --linux AppImage"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "tesseract.js": "^5.0.4",
    "electron-log": "^5.1.2",
    "zod": "^3.23.8"
  },
  "build": {
    "appId": "meu.copiloto.local",
    "productName": "Privacy Meeting Assistant",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "workers/**",
      "services/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      "assets/tessdata/**"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": { "target": "nsis" }
  }
}
