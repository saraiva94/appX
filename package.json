{
  "name": "appx",
  "version": "1.0.1",
  "main": "main.js",
  "productName": "Privacy Meeting Assistant",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win nsis",
    "build:mac": "electron-builder --mac dmg",
    "build:linux": "electron-builder --linux AppImage"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@emnapi/runtime": "^1.5.0",
    "electron-log": "^5.1.2",
    "sharp": "^0.33.4",
    "tesseract.js": "^5.0.4",
    "zod": "^3.23.8"
  },
  "build": {
    "appId": "meu.copiloto.local",
    "productName": "Privacy Meeting Assistant",
    "asar": true,
    "asarUnpack": [
      "node_modules/tesseract.js-core/**"
    ],
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "renderer.js",
      "llm-ollama.js",
      "renderer/**",
      "workers/**",
      "services/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      "assets/tessdata/**"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "artifactName": "${productName} Setup ${version}.exe",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "legalTrademarks": "Privacy Meeting Assistant (appx)"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Privacy Meeting Assistant",
      "license": "assets/LICENSE-PTBR.txt",
      "uninstallDisplayName": "Privacy Meeting Assistant",
      "artifactName": "${productName} Setup ${version}.exe"
    }
  }
}
